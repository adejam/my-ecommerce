{
  "private": true,
  "scripts": {
    "dev": "npm run development",
    "development": "mix",
    "watch": "mix watch",
    "watch-poll": "mix watch -- --watch-options-poll=1000",
    "hot": "mix watch --hot",
    "prod": "npm run production",
    "production": "mix --production",
    "format": "npx prettier  --write **/*.{html,js,json,md,json,yaml,yml,jsx}",
    "format:check": "npx prettier  --check **/*.{html,js,json,md,json,yaml,yml}",
    "lint": "npx stylelint **/*.css --fix && npx eslint --ext .jsx,.js --fix",
    "lint:check": "npx stylelint **/*.css && npx eslint --ext .jsx,.js",
    "stylelint": "npx stylelint **/*.css --fix",
    "stylelint:check": "npx stylelint **/*.css",
    "eslint": "npx eslint --ext .jsx,.js --fix",
    "eslint:check": "npx eslint --ext .jsx,.js"
  },
  "devDependencies": {
    "axios": "^0.21",
    "eslint": "^7.19.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "laravel-mix": "^6.0.6",
    "lodash": "^4.17.19",
    "postcss": "^8.1.14",
    "prettier": "2.2.1",
    "stylelint": "^13.9.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-csstree-validator": "^1.9.0",
    "stylelint-scss": "^3.18.0"
  }
}
